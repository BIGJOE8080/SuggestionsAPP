    {
        navManager.NavigateTo("/");
    }
    private async Task CreateSuggestion()
    {
        SuggestionModel s = new();
        s.Suggestion = suggestion.suggestion;
        s.Description = suggestion.Description;
    s.Author = new BasicUserModel(loggedInUser);
    }

}
